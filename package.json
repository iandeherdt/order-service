{
  "name": "order-service",
  "version": "1.0.0",
  "description": "An express service for managing orders",
  "main": "build/server.js",
  "scripts": {
    "start": "yarn build && yarn serve",
    "serve": "node ./build/server.js",
    "build": "yarn clean && yarn tslint && tsc",
    "clean": "rm -rf ./build",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "jest --maxWorkers=1 --forceExit",
    "postinstall": "yarn build"
  },
  "dependencies": {
    "@types/body-parser": "~1.16.8",
    "@types/boom": "^7.2.0",
    "@types/dotenv-safe": "~4.0.1",
    "@types/express": "~4.11.0",
    "@types/jest": "~22.0.1",
    "@types/joi": "^13.0.5",
    "@types/mongoose": "^5.0.7",
    "@types/supertest": "~2.0.4",
    "@types/winston": "~2.3.7",
    "body-parser": "1.18.2",
    "boom": "^7.2.0",
    "dotenv-safe": "4.0.4",
    "express-validation": "^1.0.2",
    "express": "4.16.2",
    "jest": "~22.1.4",
    "joi": "^13.1.2",
    "mongoose": "^5.0.12",
    "supertest": "~3.0.0",
    "ts-jest": "~22.0.1",
    "tslint-config-airbnb": "~5.4.2",
    "tslint": "~5.9.1",
    "typescript": "~2.6.2",
    "winston": "2.4.0"
  }
}
